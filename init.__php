<?php
	require_once 'info.php';
	$con=mysql_connect($host, $user, $pwd);
	if (!$con)
		die('ft' . mysql_error());

	mysql_query("CREATE DATABASE $db_name DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci",$con);
	mysql_select_db($db_name, $con);


	$sql_codes="CREATE TABLE code
	(
		id int NOT NULL AUTO_INCREMENT,
		code text,
		date timestamp,
		uid int, 
		status int,
		info text,
		pid int,
		lang int,
		time int,
		memory int,
		PRIMARY KEY(id)
	)";
	

	$sql_problems="CREATE TABLE problem
	(
		id int NOT NULL AUTO_INCREMENT,
		pid int,
		title text,
		tlimit int,
		mlimit int,
		desp text,
		input text,
		output text,
		sinput text,
		soutput text,
		source text,
		date timestamp,
		PRIMARY KEY(id)
	)";

	$sql_users="CREATE TABLE user
	(
		id int NOT NULL AUTO_INCREMENT,
		name char(255),
		pwd char(255),
		email char(255),
		sch char(255),
		motto char(255),
		date timestamp,
		PRIMARY KEY(id)
	)";
	
	mysql_query($sql_codes,$con);
	mysql_query($sql_problems,$con);
	mysql_query($sql_users,$con);

	
	mysql_close($con);
		
?>
